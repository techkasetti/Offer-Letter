        <td><div class="slds-text-heading-large slds-gray slds-align_absolute-center"><b>{!v.JobList.No_Of_Candidate_Selected__c}</b></div></td>
        <td><div class="slds-text-heading-large slds-gray slds-align_absolute-center"><b>{!v.JobList.Posting_Due_Date__c}</b></div></td>
        <td><div class="slds-text-heading-large slds-gray slds-align_absolute-center"><b class="status">{!v.JobList.Job_OC_Status__c}</b></div></td>
        
    </tr>-->
    
    
    <aura:if isTrue="{!v.expanded}">         
       
                <tr class="slds-text-title_caps " style="background-color: #F3F3F3">
                    
                    <th></th>
                    <th></th>
                    <th><div class="slds-truncate"><b>Job Applicants </b></div></th>
                    <th><div class="slds-truncate"><b>Application Status </b></div></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
         
                </tr>

                
                <aura:iteration items="{!v.JobList.jobApplicationWrapList}" var="var1" indexVar="index">
                    <c:JobProfileChild jobApplication="{!var1}"  /> 
                </aura:iteration>
                
   
       
    </aura:if>
    
    
</aura:component>